<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Swap your footwear!</title>
    <!-- css files -->
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">


    <!-- Javascript files -->
    <script type="text/javascript" src="../JS/myScript.js"></script>
    <link rel="icon" type="image/png" sizes="16x16"
          href="../Images/favicon-16x16.png">
</head>
<body id="grad">
<!-- Header of the main page -->
<% include partials/header.ejs %>

<!--User Links -->
<% include partials/user-navigation.ejs %>

<!-- Site navigation options -->
<% include partials/site-navigation.ejs %>

<!-- Breadcrumbs and the image presentation -->
<div class="col-xs-12 col-sm-10">

    <nav>
        <ol class="breadcrumb ">
            <li class="breadcrumb-item "><a href="/">Home</a></li>
        </ol>
    </nav>

    <!-- Main index.html content -->
    <main>
        <section>
            <article>
                <form action="/register" method="post"  class="register">
                    <div class="container">
                        <div>

                        </div>
                        <h1>Sign Up</h1>
                        <p>Please fill in this form to create an account.</p>
                        <hr>

                        <label><b>First Name</b></label>
                        <input type="text" placeholder="Enter first name" name="firstname" required>

                        <label><b>Last Name</b></label>
                        <input type="text" placeholder="Enter last name" name="lastname" required>

                        <label><b>Email</b></label>
                        <input type="text" placeholder="Enter Email" name="email" required>

                        <label><b>City</b></label>
                        <input type="text" placeholder="Enter city" name="city" required>

                        <label><b>State</b></label>
                        <input type="text" placeholder="Enter State" name="state" required>

                        <label><b>Postcode</b></label>
                        <input type="text" placeholder="Enter postcode" name="postcode" required>

                        <label><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>

                        <label>
                            <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                        </label>

                        <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

                        <div class="clearfix">
                            <button type="button" class="cancelbtn">Cancel</button>
                            <button type="submit" class="signupbtn">Sign Up</button>
                        </div>
                    </div>
                    <% if(errorValues != undefined){ %>
                        <% errorValues.forEach(function (element) { %>
                            <div>
                                <p><%= element %></p>
                            </div>
                        <% }) %>
                    <% } %>
                </form>
            </article>
        </section>
    </main>
</div>
</div>
</div>

<!-- Footer of the webpage -->
<% include partials/footer.ejs %>

</body>
</html>