<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Swap your footwear!</title>
    <!-- css files -->
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">


    <!-- Javascript files -->
    <script type="text/javascript" src="../JS/myScript.js"></script>
    <link rel="icon" type="image/png" sizes="16x16"
          href="../Images/favicon-16x16.png">
</head>
<body id="grad">
<!-- Header of the main page -->
<!-- Header of the main page -->
<% include partials/header.ejs %>

<!--User Links -->
<% if(isSession == true){ %>
    <% include partials/user-navigation-new.ejs %>
<% } %>
<% if(isSession == false){ %>
    <% include partials/user-navigation.ejs %>
<% } %>
<% if(isSession == undefined){ %>
    <% include partials/user-navigation.ejs %>
<% } %>

<!-- Site navigation options -->
<% include partials/site-navigation.ejs %>

<!-- Breadcrumbs and the image presentation -->
<div class="col-xs-12 col-sm-10">

    <nav>
        <ol class="breadcrumb ">
            <li class="breadcrumb-item "><a href="/">Home</a></li>
        </ol>
    </nav>

    <!-- Main index.html content -->
    <main>
        <section>
            <article>
                    <div style="padding-top: 10px">
                        <h1 class="commentheader">Please rate and Enter your Comments!</h1>
                        <table>
                            <% if(userItem === true){ %>
                            <form action="/feedback?action=rate&itemCode=<%=itemCode%>" method="post">

                                <tr>
                                    <td>
                                        <img src="../Images/human-icon.png" alt="human icon" height="86" width="100">
                                    </td>
                                    <td style="padding-left: 10px">
                                        <textarea rows="4" cols="50" name="comment" placeholder="Please enter your comments..."></textarea>
                                    </td>
                                    <td>
                                        <fieldset class="rating">
                                            <input type="radio" id="star5" name="rating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars"></label>
                                            <input type="radio" id="star4half" name="rating" value="4 and a half" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                                            <input type="radio" id="star4" name="rating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars"></label>
                                            <input type="radio" id="star3half" name="rating" value="3 and a half" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
                                            <input type="radio" id="star3" name="rating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars"></label>
                                            <input type="radio" id="star2half" name="rating" value="2 and a half" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
                                            <input type="radio" id="star2" name="rating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
                                            <input type="radio" id="star1half" name="rating" value="1 and a half" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
                                            <input type="radio" id="star1" name="rating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star"></label>
                                            <input type="radio" id="starhalf" name="rating" value="half" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
                                        </fieldset>
                                    </td>
                                    <td style="padding-left: 10px">
                                        <input type="submit" class="btn btn-primary" value="Post Comment">
                                    </td>
                                </tr>
                            </form>
                            <% } %>
                        </table>
                        <%if(feedbackValues!==undefined){%>
                            <table class="commenttable">
                                <%feedbackValues.forEach(function (element) {%>
                                    <tr>
                                        <td class="commenttd">
                                            <img src="../Images/human-icon.png" height="50" width="50">
                                        </td>
                                        <td class="commenttd">
                                            <a href="#"><%=element.userName%></a>
                                            <p><%=element.rating%></p>
                                        </td>
                                    </tr>
                                <%})%>
                            </table>
                        <%}%>
                        <%if(feedbackValues===undefined){%>
                        <%}%>
                    </div>
            </article>
        </section>
    </main>
</div>
</div>
</div>

<!-- Footer of the webpage -->
<% include partials/footer.ejs %>

</body>
</html>